<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titleMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliga el numero de tomas diarias"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"/>

    <RadioGroup
        android:id="@+id/RadioGroup"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@id/titleMenu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <RadioButton
            android:id="@+id/FirstButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Una toma diaria     "
            />
        <RadioButton
            android:id="@+id/SecondButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dos tomas diarias    "
            />
        <RadioButton
            android:id="@+id/ThirdtButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tres tomas diarias   "
            />
        <RadioButton
            android:id="@+id/FourButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuatro tomas diarias"
            />
        <RadioButton
            android:id="@+id/FiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seis tomas diarias   "
            />



    </RadioGroup>

    <Button
        android:id="@+id/ReturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atras"
        android:backgroundTint="#ec407a"
        tools:ignore="MissingConstraints"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@id/RadioGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp">
    </Button>

    <Button
        android:id="@+id/ContinueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:backgroundTint="#26c6da"
        tools:ignore="MissingConstraints"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@id/RadioGroup"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp">
    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>